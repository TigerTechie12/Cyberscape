generator client {
 
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}
model User{
  id String @id @unique @default(cuid())
  username String @unique
  password String @unique
  type userType
  avatarId String
  space Space[]
  avatar Avatar @relation(fields:[avatarId],references:[id])
}
model Avatar{
id String @id @unique @default(cuid())
name String? 
imageUrl String? 
user User[]
}
model mapElements{
  id String @id @unique @default(cuid()) 
mapId String
elementId String
x Int?
y Int?
map Maps @relation(fields:[mapId],references: [id])
element Element @relation(fields:[elementId],references: [id])
}
model Space{
id String @id @unique @default(cuid())
name String
width Int
thumbnail String?
height Int?
creatorId String
admin User @relation(fields:[creatorId],references:[id])
spaceElements spaceElements[]
}
model spaceElements{
  id String @id @unique @default(cuid())
elementId String
spaceId String
x Int
y Int
space Space @relation(fields:[spaceId],references: [id])
element Element @relation(fields:[elementId],references:[id])
}

model Element{
  id String @id @unique @default(cuid())
  imageUrl String
  static Boolean
  height Int
  width Int
  spaceElements spaceElements[]
  mapElements mapElements[]
}
model Maps{
  id String @id @unique @default(cuid())
  width Int
  height Int
  name String
 mapElements mapElements[]
}
enum userType{
  User
  Admin
}